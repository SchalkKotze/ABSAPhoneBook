@model PhoneBook.Models.PhoneBookModel

@{
    ViewData["Title"] = "Add New PhoneBook";
}

<h1>Add New PhoneBook</h1>

<h4>PhoneBook Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPhoneBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="phonebookname" class="control-label"></label>
                <input asp-for="phonebookname" class="form-control" />
                <span asp-validation-for="phonebookname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
